let current = null;

function nextQuestion() {
  current = films[Math.floor(Math.random()*films.length)];
  document.getElementById("emojis").innerText = current.emojis;
  document.getElementById("answer").style.display = "none";
  document.getElementById("answer").innerText = current.title;
  localStorage.setItem("currentEmojis", current.emojis);
}

function reveal() {
  if (!current) return;
  document.getElementById("answer").style.display = "block";
  localStorage.setItem("reveal", "true");
}

new QRCode(document.getElementById("qrcode"), {
  text: window.location.origin + window.location.pathname.replace("jeu.html","joueurs.html"),
  width:180,
  height:180
});
